{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SC2ReplayAnalyzer",
  "version": "1.5.0",
  "identifier": "SC2ReplayAnalyzer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "SC2ReplayAnalyzer",
        "width": 1024,
        "height": 768,
        "decorations": false,
        "transparent": true,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "resources": [
      "bin/main.exe",
      "bin/",
      "WebView2Loader.dll"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
