{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug run.py", // 调试配置的名称，可以自定义
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py", // 入口文件
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}", // 工作目录为项目根目录
            "env": {
                // 设置环境变量，如果需要的话
                // "PYTHONPATH": "${workspaceFolder}/src:${env:PYTHONPATH}"
            },
            "envFile": "${workspaceFolder}/.env", // main 函数的需要.env 文件，在这里指定
            "args": ["multi"] // 命令行参数，例如 ["--verbose", "input.txt"]
        }
    ]
}